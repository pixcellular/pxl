{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "no-console": false,
    "object-literal-sort-keys": false,
    "trailing-comma": false,
    "quotemark": [
      true,
      "single"
    ]
  },
  "rules": {
    "trailing-comma": [
      false
    ],
    "variable-name": [
      true,
      "allow-leading-underscore"
    ],
    "no-empty": false,
    "no-trailing-whitespace": false,
    "max-classes-per-file": false,
    "arrow-parens": false,
    "interface-over-type-literal": false,
    "no-shadowed-variable": false,
    "quotemark": [
      true,
      "single"
    ],
    "object-literal-sort-keys": false,
    "no-console": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "no-bitwise": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "src/Perlin.ts"
    ]
  }
}
